<Window x:Class="Template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:Template"
        mc:Ignorable="d"
        Closing="WindowClosing" 
        ResizeMode="CanMinimize"
        Title="TwilioSms" Height="700" Width="1000" Background="#FF3E6FB3" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="1" Grid.Column="1" x:Name="Logo"  Margin="28,19,0,0" HorizontalAlignment="Left" Height="141" VerticalAlignment="Top" Width="159" Source="Icon/SMS.png"/>
        <TabControl Grid.Row="1" Grid.Column="0" x:Name="LogRecord" HorizontalAlignment="Left" Height="175" VerticalAlignment="Top" Width="790" Background="#FFE6F0FF">
            <TabControl.Resources>
                <Style TargetType="RichTextBox">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="DockPanel.Dock" Value="Bottom" />
                </Style>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="FontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="一般" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxGeneral" Background="#FF43B5BF"/>
            </TabItem>
            <TabItem Header="警告" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxWarning" Background="#FF43AABF"/>
            </TabItem>
            <TabItem Header="錯誤" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxError" Background="#FF43A0BF"/>
            </TabItem>
            <TabItem Header="除錯" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxDebug" Background="#FF4396BF"/>
            </TabItem>
        </TabControl>
        <TabControl Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="491" Width="992" Background="#FFE6F0FF">
            <TabItem Header="主畫面" Style="{StaticResource BaseTabcontrol}">
                <Grid>
                    <WrapPanel Orientation="Vertical" Margin="19,86,659,86">
                        <TextBox x:Name="Account_SID" Style="{StaticResource BaseTextBox}" Tag="Account SID" Height="40" Width="250" Margin="29,25,0,0"/>
                        <TextBox x:Name="Auth_Token" Style="{StaticResource BaseTextBox}" Tag="Auth Token" Height="40" Width="250" Margin="29,25,0,0"/>
                        <TextBox x:Name="Twilio_Number" Style="{StaticResource BaseTextBox}" Tag="Twilio Number" Height="40" Width="250" Margin="29,25,0,0"/>
                        <TextBox x:Name="Recipient_Number" Style="{StaticResource BaseTextBox}" Tag="Recipient Number" Height="40" Width="250" Margin="29,25,0,0"/>
                    </WrapPanel>
                    <Button x:Name="Send_SMS" Style="{StaticResource CircleButton}" Margin="840,88,46,271" Content="Send SMS" FontSize="18" Height="100" Width="100" Click="Main_Btn_Click"/>
                    <Button x:Name="Save_Config" Style="{StaticResource CircleButton}" Margin="840,254,46,105" Content="Save Config" FontSize="18" Height="100" Width="100" Click="Main_Btn_Click"/>
                    <RichTextBox x:Name="Dialogue" Margin="343,34,180,31" Background="Beige" VerticalScrollBarVisibility="Auto">
                        <RichTextBox.Resources>
                            <Style TargetType="Paragraph">
                                <Setter Property="Margin" Value="0"/>
                                <!-- 段落外距 0 -->
                                <Setter Property="LineHeight" Value="12"/>
                                <!-- 行高可依需求調整 -->
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Grid>
            </TabItem>
            <TabItem Header="關於" Style="{StaticResource BaseTabcontrol}" PreviewMouseLeftButtonDown="About_Click"/>
        </TabControl>
    </Grid>
</Window>
